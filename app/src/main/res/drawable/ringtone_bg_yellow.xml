<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/gray_color">

    <!-- Define the normal background outside of the mask -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <solid android:color="@color/yellow_ringtone_bg" /> <!-- Yellow background -->
            <stroke
                android:width="1dp"
                android:color="#454545" /> <!-- Stroke border -->
        </shape>
    </item>

    <!-- Mask defines where the ripple will apply -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <solid android:color="@android:color/white" /> <!-- Can be transparent or white -->
        </shape>
    </item>

</ripple>